<Window x:Class="TypeKid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowState="Maximized"  WindowStyle="None" Height="222" Width="546"
        FocusManager.FocusedElement="{Binding ElementName=MainText}" >
    <TextBox Name="MainText" CharacterCasing="Upper" Text="ABC" CaretIndex="3" FontSize="72" AllowDrop="False" ContextMenu="{x:Null}" ForceCursor="True" PreviewKeyDown="MainText_PreviewKeyDown" FontFamily="Book Antiqua" TextWrapping="Wrap" PreviewKeyUp="MainText_PreviewKeyUp"/>
</Window>
